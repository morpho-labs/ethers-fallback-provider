{
  "name": "@morpho-labs/ethers-fallback-provider",
  "version": "1.0.0",
  "description": "Package providing a fallback provider based on ethers-providers, adding more resilience.",
  "main": "lib/index.js",
  "files": [
    "lib/*"
  ],
  "scripts": {
    "build": "tsc --build ./tsconfig.build.json",
    "lint": "eslint ./src ./test --fix",
    "test:watch": "jest --watch",
    "test": "jest",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/morpho-labs/ethers-fallback-provider.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=14.0"
  },
  "keywords": [
    "ethers",
    "fallback",
    "provider",
    "rpc",
    "call",
    "evm"
  ],
  "bugs": {
    "url": "https://github.com/morpho-labs/ethers-fallback-provider/issues"
  },
  "homepage": "https://github.com/morpho-labs/ethers-fallback-provider#readme",
  "dependencies": {
    "@ethersproject/providers": "^5.7.0"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/jest": "^29.5.1",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  },
  "peerDependencies": {
    "@ethersproject/providers": "^5.7.0"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --cache-location .eslintcache --fix"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "build",
              "scope": "deps",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "build",
                "section": "Dependencies and Other Build Updates",
                "hidden": false
              }
            ]
          }
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "jest": {
    "verbose": true,
    "testTimeout": 15000,
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(.*|(\\.|/)(test|spec)+)\\.test\\.(js|ts)$",
    "moduleFileExtensions": [
      "js",
      "ts"
    ]
  }
}
